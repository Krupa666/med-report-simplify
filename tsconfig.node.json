{
  "compilerOptions": {
    /* Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",

    /* Node / Vite */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ðŸ”’ Prevent unwanted type injection (phoenix / prop-types) */
    "types": ["node"],

    /* Safety */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "vite.config.ts",
    "env.d.ts"
  ]
}
